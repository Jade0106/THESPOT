@using static THE_SPOT.Models.DeptEmployeePR
@model THE_SPOT.Models.DeptEmployeePR
@{
    ViewData["Title"] = "Update";
}

<form method="post" asp-action="Update">
    <input asp-for="ID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h4 class="text-black pl-3 text-warning">UPDATE PURCHASE REQUEST</h4>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="qty"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="description"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="itemPrice"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="total"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="status"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="qty" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="description" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="itemPrice" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="total" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="status" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-info w-75" value="UPDATE" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-warning w-75">BACK</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

