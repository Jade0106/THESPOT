@using static THE_SPOT.Models.MugsDeptPR
@model THE_SPOT.Models.MugsDeptPR
@{
    ViewData["Title"] = "Index";
}

<form method="post" asp-action="MugsDeletePost">
    <input asp-for="ID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h4 class="text-black pl-3 text-warning">DELETE PURCHASE REQUEST ORDER</h4>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="qty"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="date"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="description"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="itemPrice"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="qty" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="date" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="description" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="itemPrice" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-danger w-75" value="DELETE" />
                        </div>
                        <div class="col">
                            <a asp-action="MugsDeptPR" class="btn btn-outline-warning w-75">BACK</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
