@model THE_SPOT.Models.TeaViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-controller="Tea" asp-action="Create" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row"></div>
    
  <div class="row justify-content-center">
    <div class="col-lg-4 col-sm-6 mb-4">
        <!-- Portfolio item 1-->
        <div class="col-lg-12">
            <div class="card text-center" style="height:600px">
                <div class="card-body">
                        <h4>ADD TEA</h4>
                        <div> <br /> </div>
                        <div> <br /> </div>
                      
    @using (Html.BeginForm("Create", "Tea", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-outline mb-4">
            <label class="form-label text-left" for="form3Example">Product Name</label>
            <input asp-for="Name" type="text" id="form3Example1cg" class="form-control form-control-lg"style="width: 250px; height: 30px;" />
            @Html.ValidationSummary(true, "", new{@class = "text-danger"})
            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
        </div>
        <div class="form-outline mb-4">
            <label class="form-label text-left"for="form3Example">Description</label>
            <input asp-for="Description" type="text" id="form3Example1cg" class="form-control form-control-lg"style="width: 250px; height: 30px;" />
            @Html.ValidationSummary(true, "", new{@class = "text-danger"})
            @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger"})
        </div>
        <div class="form-outline mb-4">
            <label class="form-label text-left"for="form3Example">Price</label>
            <input asp-for="Price" type="text" id="form3Example1cg" class="form-control form-control-lg"style="width: 250px; height: 30px;" />
            @Html.ValidationSummary(true, "", new{@class = "text-danger"})
            @Html.ValidationMessageFor(model => model.Price, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
    <label asp-for="ImageFile" class="control-label text-left">Image</label>
    <input type="file" name="imageFile" accept="image/jpeg, image/png, image/jpg" class="form-control"style="width: 250px; height: 40px;" />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
</div>
       <br />
                            <div class="form-group">
                                <label asp-for="Date" class="control-label  text-left"></label>
                                <input asp-for="Date" class="form-control" style="width:250px" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
        <script>
            $(document).ready(function () {
                $(".datepicker").datepicker({
                    dateFormat: "dd-mm-yy",
                    changemonth: true,
                    changeyear: true,
                                                                        showOn: "button",
                    buttonText: '<span class="glyphicon glyphicon-calender"></span>'
                                                                        minDate: new Date()
                });
            });
        </script>
        <br />
         <div> <br /> </div>
                        
                        
                    
        
        <div class="text-lg-center"> 
            <input type="submit" class="btn btn-md btn-outline-success" value="ADD" />
            
           
            <button type="button" class="btn btn btn-outline-secondary" onclick="location.href='@Url.Action("Index1", "Tea")'">VIEW PRODUCTS</button>
            <button type="button" class="btn btn-md btn-outline-danger" onclick="location.href = '@Url.Action("Index","SalesEmployee")'">BACL</button>

        </div>
    }
</form>
